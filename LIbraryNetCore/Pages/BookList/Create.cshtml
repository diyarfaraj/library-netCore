@page
@model LIbraryNetCore.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Create New Book</h1>
<br />

<div class="border container">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Title" class="form-control "></label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Author" class="form-control "></label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.ISBN" class="form-control "></label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Rating"></label>
            </div>
            <div class="col-6">
                <label asp-for="Book.Rating" class="form-control "></label>
            </div>
        </div>
        <div class="form-group row">

        </div>
    </form>
</div>

